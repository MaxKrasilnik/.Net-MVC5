@model IEnumerable<Epam3.Models.ApplicantViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patronym)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailApp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Education)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Math)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UkrLanguage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EngLanguage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FacultyId)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>
                @Html.DisplayFor(model => item.Surname)
            </th>
            <th>
                @Html.DisplayFor(model => item.Name)
            </th>
            <th>
                @Html.DisplayFor(model => item.Patronym)
            </th>
            <th>
                @Html.DisplayFor(model => item.EmailApp)
            </th>
            <th>
                @Html.DisplayFor(model => item.City)
            </th>
            <th>
                @Html.DisplayFor(model => item.Region)
            </th>
            <th>
                @Html.DisplayFor(model => item.Education)
            </th>
            <th>
                @Html.DisplayFor(model => item.Math)
            </th>
            <th>
                @Html.DisplayFor(model => item.UkrLanguage)
            </th>
            <th>
                @Html.DisplayFor(model => item.EngLanguage)
            </th>
            <th>
                @Html.DisplayFor(model => item.FacultyId)
            </th>

        </tr>
        
    }

</table>
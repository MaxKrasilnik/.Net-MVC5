@model Epam3.Models.ApplicantViewModel

@{
    ViewBag.Title = "EditApplicant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditApplicant</h2>

@helper EditApplicant()
{
    @Html.BeginForm("EditApplicant", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" })
    {
        @Html.HiddenFor(m => Model.Id)
        <div class="form-group">
            @Html.Label("Фамилия", new { @class = "col-md-5 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => Model.Surname, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Имя", new { @class = "col-md-5 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => Model.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Отчество", new { @class = "col-md-5 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => Model.Patronym, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Email", new { @class = "col-md-5 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => Model.EmailApp, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Город", new { @class = "col-md-5 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => Model.City, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Область", new { @class = "col-md-5 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => Model.Region, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Образование", new { @class = "col-md-5 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => Model.Education, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Оценка по математике", new { @class = "col-md-5 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => Model.Math, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Оценка по украинскому", new { @class = "col-md-5 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => Model.UkrLanguage, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Оценка по английскому", new { @class = "col-md-5 control-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => Model.EngLanguage, new { @class = "form-control" })
            </div>
        </div>
        @Html.HiddenFor(m => Model.FacultyId)
        @Html.HiddenFor(m => Model.Faculty)
        <div class="form-group">
            <div class="col-md-offset-6 col-md-6">
                <input type="submit" class="btn btn-warning" value="Сохранить" />
            </div>
        </div>
    ViewData["FacultyId"] = Model.FacultyId;
    }
}

@EditApplicant()

<div class="form-group">
    <div class="col-md-offset-6 col-md-6">
        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("AmdinApplicant", "Home", new { faculty = ViewData["FacultyId"], page = 1 })'">Назад</button>
    </div>
</div>